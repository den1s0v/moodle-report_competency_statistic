<div style="display: flex;">
    <div style="width: 100%">
        <canvas id="allComp" style="margin: auto; height: 400px; width: 50%;"></canvas>
    </div>
</div>
<br/>

<h2 style="text-align: center; font-weight: 500; margin-top: 70px;">Список освоенных компетенций</h3>
<ol class="rounded">
    {{#my_list_competency}}
      <li><span href="#">
        {{competency}}
        <br><small>Средний балл: {{score}}</small>
        {{#discipline_fullnames}}
          <br><small>Курсы ({{count_discipline}}): {{discipline_fullnames}}</small>
        {{/discipline_fullnames}}
      </span></li>
    {{/my_list_competency}}
</ol>

<script>
    const ctx = document.getElementById('allComp');
    const myChart = new Chart(ctx, {
        type: 'polarArea',
        data: {
            labels: {{&labels}},
            datasets: [{
                label: 'Задания',
                data: {{chart_data}},
                backgroundColor: {{&colors}},
                hoverOffset: 10
            }]
        },
        options: {
            plugins: {
                legend: {
                    display: false,
                }
            }
        }
    });
</script>
